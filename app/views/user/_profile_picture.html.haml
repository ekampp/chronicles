- if signed_in?
  = link_to edit_user_path do
    - if current_user.email.present?
      = image_tag "https://secure.gravatar.com/avatar/#{Digest::MD5.hexdigest(current_user.email.strip)}.png?s=35", class: "img-circle"
    - else
      = current_user.name
- else
  = link_to t(".sign_in"), sign_in_path, id: "sign_in"
