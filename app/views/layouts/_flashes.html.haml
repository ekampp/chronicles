%section
  .container
    .row
      .span12
        - if flash[:notice]
          .alert.alert-success
            %button{ type: "button", class: "close", "data-dismiss" => "alert" } &times;
            %p= flash[:notice]

        - if flash[:alert]
          .alert.alert-error
            %button{ type: "button", class: "close", "data-dismiss" => "alert" } &times;
            %p= flash[:alert]
