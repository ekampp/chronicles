.container
  .row
    .span12
      %h1= t(".title")
      %p.lead= t(".lead", link_to_new: link_to(t(".new_character"), new_character_path)).html_safe

  .row
    .span12
      .media
        - characters.each do |character|
          = link_to [:edit, character], class: "pull-left" do
            %img(data-source="http://placehold.it/64x64" class="media-object")
          .media-body
            = link_to [:edit, character] do
              %h2= character.name
